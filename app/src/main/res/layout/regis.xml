<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SendPack Register"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="590dp"
        android:background="#ffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/judul"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/reg_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/txtreg_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/reg_uname"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:ems="13"
            />

        <TextView
            android:id="@+id/reg_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_below="@id/txtreg_uname"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/txtreg_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_pass"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:ems="13"
            />

        <TextView
            android:id="@+id/reg_passcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Confirm"
            android:layout_below="@id/txtreg_pass"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"

            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/txtreg_passcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_passcon"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:ems="13"
            />

        <TextView
            android:id="@+id/reg_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@id/txtreg_passcon"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/txtreg_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_email"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:ems="13"
            />

        <TextView
            android:id="@+id/reg_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_below="@id/txtreg_email"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"

            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/txtreg_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_city"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:ems="13"
            />

        <TextView
            android:id="@+id/reg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_below="@id/txtreg_city"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/txtreg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_phone"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:ems="13"
            />
        <Button
            android:id="@+id/btnRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtreg_phone"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="Register"
            android:textSize="15dp"
            android:onClick="user_baru"
            />
</RelativeLayout>
</RelativeLayout>